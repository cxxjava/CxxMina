.PRECIOUS:%.cpp %.c %.C
.SUFFIXES:
.SUFFIXES:  .cpp .obj

.cpp.obj:
	$(CCOMPILE) -c -Fo$* -o $*.obj $(COMPILEOPTION) $(INCLUDEDIR) $*.cpp

.c.o:
	$(CCOMPILE) -c -Fo$* -o $*.obj $(CCOMPILEOPTION) $(INCLUDEDIR) $*.c
